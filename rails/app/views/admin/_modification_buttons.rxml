xml.div( :id => 'buttons', :style => 'display: none;' ) do
  xml.button( local('form::cancel'), {:type=>'button',:id=>'cancel-button',:accesskey=>'c',:onclick=>'clear_tainting();window.location.reload( true );'} )
  xml.button( local('form::save'), {:type=>'button',:id=>'submit-button',:accesskey=>'s',:onclick=>'clear_tainting();submit()'} )
end
xml.script( "new Form.EventObserver('content_form', function(element, value ) { enable_save_button() } );", { :type => 'text/javascript' } )
