<h3>Arrived</h3>
<table>
  <thead>
    <tr>
      <th colspan="2">Name</th>
    </tr>
  </thead>
  <tbody>
  <% @arrived.each do | a | %>
    <tr>
      <td>
        <%= link_to( image_tag("/image/person/#{a.person_id.to_s + '-24x24'}", {:size => "24x24"} ), :action => 'person', :id => a.person_id ) %>
      </td>
      <td><a href="<%= url_for({:action=>:person,:id=>a.person_id}) %>"><%= h( a.name ) %></a></td>
    </tr>
  <% end %>
  </tbody>
</table>
