<patTemplate:tmpl name="report">

  <div id="object-image">
    <img src="{BASE_URL}images/icon-list-64x64.png" class="object-image" />
  </div>

  <div id="content-events">
    <patTemplate:tmpl varscope="report" type="simplecondition" requiredvars="report-list.name">
    <table id="result" class="sortable">
      <thead>
        <tr>
          <th/>
          <th>Name</th>
        </tr>
      </thead>
      <tbody>
        <patTemplate:tmpl name="report-list">
          <tr>
            <td><a href="{URL}"><img src="{IMAGE_URL}" class="small" title="{NAME}" /></a></td>
            <td><a href="{URL}">{NAME}</a></td>
          </tr>
        </patTemplate:tmpl>
      </tbody>
      <tfoot>
          <tr>
            <td><strong>{TOTAL_SUM}</strong></td>
          </tr>
      </tfoot>
    </table>
    </patTemplate:tmpl>
  </div>
</patTemplate:tmpl>
