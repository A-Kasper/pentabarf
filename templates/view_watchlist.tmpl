<patTemplate:tmpl name="content">
  <script type="text/javascript" src="{BASE_URL}js/watch.js"></script>
  <script type="text/javascript" src="{BASE_URL}js/request.js"></script>

  <div id="object-image">
    <img src="{BASE_URL}images/pentabarf-64x64.png" class="object-image" />
  </div>

  <h2>Your Watchlist</h2>
  <p>These are the objects on your watchlist.</p>

  <div id="content-persons" class="content_tab">
    <h3>Persons</h3>
    <patTemplate:tmpl name="watchlist-person-table" type="simplecondition" requiredvars="watchlist_person.person_id">
    <table id="watchlist-person" class="sortable">
      <thead>
      	<tr>
	  <th/>
	  <th>Name</th>
	  <th>Watch State</th>
	</tr>
      </thead>
      <tbody>
        <patTemplate:tmpl name="watchlist_person">
          <tr>
            <td><a href="{URL}"><img src="{IMAGE_URL}" class="small" title="{NAME}" /></a></td>
            <td><a href="{URL}">{NAME}</a></td>
          <td><button id="watch-button-person-{PERSON_ID}" onClick="window.watch('person', {PERSON_ID});">{WATCH_BUTTON}</button></td>
          </tr>
        </patTemplate:tmpl>
      </tbody>
    </table>
    </patTemplate:tmpl>
  </div>
  
  <div id="content-events" class="content_tab">
    <h3>Events</h3>
    <patTemplate:tmpl name="watchlist-event-table" type="simplecondition" requiredvars="watchlist_event.event_id">
    <table id="watchlist-event-table" class="sortable">
      <thead>
      	<tr>
	  <th/>
	  <th>Title / Subtitle</th>
	  <th>Acronym</th>
	  <th>Status</th>
	  <th>Watch State</th>
	</tr>
      </thead>
      <tbody>
        <patTemplate:tmpl name="watchlist_event">
          <tr>
            <td><a href="{URL}"><img src="{IMAGE_URL}" class="small" title="{TITLE}" /></a></td>
            <td><a href="{URL}"><strong>{TITLE}</strong><br /><em>{SUBTITLE}</em</a></td>
            <td><a href="{URL}">{CONFERENCE_ACRONYM}</a></td>
            <td><a href="{URL}">{STATUS}</a></td>
          <td><button id="watch-button-event-{EVENT_ID}" onClick="window.watch('event', {EVENT_ID});">{WATCH_BUTTON}</button></td>
          </tr>
        </patTemplate:tmpl>
      </tbody>
    </table>
    </patTemplate:tmpl>
  </div>

  <div id="content-conferences" class="content_tab">
    <h3>Conferences</h3>
    <patTemplate:tmpl name="watchlist-conference-table" type="simplecondition" requiredvars="watchlist_conference.conference_id">
    <table id="watchlist-conference" class="sortable">
      <thead>
      	<tr>
	  <th/>
	  <th>Title</th>
	  <th>Conference</th>
	  <th>Watch State</th>
	</tr>
      </thead>
      <tbody>
        <patTemplate:tmpl name="watchlist_conference">
          <tr>
            <td><a href="{URL}"><img src="{IMAGE_URL}" class="small" title="{TITLE}" /></a></td>
            <td><a href="{URL}">{TITLE}</a></td>
            <td><a href="{URL}">{ACRONYM}</a></td>
          <td><button id="watch-button-conference-{CONFERENCE_ID}" onClick="window.watch('conference', {CONFERENCE_ID});">{WATCH_BUTTON}</button></td>
          </tr>
        </patTemplate:tmpl>
      </tbody>
    </table>
    </patTemplate:tmpl>
  </div>

</patTemplate:tmpl>
