<patTemplate:tmpl name="result">
  <fieldset>
    <legend>{RESULT}</legend>
    <patTemplate:tmpl name="result_list" type="simplecondition" requiredvars="result_element.person_id">
      <table id="result" class="sortable">
        <tr>
          <th></th>
          <th>Name</th>
          <th></th>
        </tr>
      <patTemplate:tmpl name="result_element">
        <tr>
          <td>
            <a href="{URL}">
              <img src="{IMAGE_URL}" height="32" width="32" title="{NAME}" />
            </a>
          </td>
          <td><a href="{URL}">{NAME}</a></td>
          <td><button id="watch-button-person-{PERSON_ID}" onClick="window.watch('person', {PERSON_ID});" title="Put this person on your watch list">{BUTTON_WATCH}</button></td>
        </tr>
      </patTemplate:tmpl>
    </table>
  </patTemplate:tmpl>
</patTemplate:tmpl>
</patTemplate:tmpl>
