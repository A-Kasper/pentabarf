<patTemplate:tmpl name="content">
  <script type="text/javascript" src="{BASE_URL}js/watch.js"></script>
  <script type="text/javascript" src="{BASE_URL}js/request.js"></script>
  <script type="text/javascript" src="{BASE_URL}js/search.js"></script>

  <div id="object-image">
    <img src="{BASE_URL}images/icon-find-person-64x64.png" class="object-image" />
  </div>

  <div id="content-simple">

    <fieldset>
      <legend>Find</legend>
      <form method="post" action="">
        <input type="text" name="find_persons" value="{FIND}" size="50" />
        <button type="submit">Show Matching Persons</button>
      </form>
    </fieldset>

  </div>

  <div id="content-advanced">
    <fieldset>
    <legend>Find</legend>
      <form method="post" action="">
        <div id="search_elements">
        </div>
        <button type="submit">Show Matching Persons</button>
      </form>
    </fieldset>
  </div>

